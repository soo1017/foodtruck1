<div class="row sign">
    <div class="col-md-8 col-sm-8 offset-md-2 offset-sm-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Order</h2>
        {{# each orders }}
            <div class="panel panel-default">
<!--            <div class="panel-heading"> SignUp to the system </div>-->
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ this.item.title }} | {{ this.qty }} Units
                            <span class="badge badge-primary badge-pill">{{this.price}}</span>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer"><strong>${{ this.cart.totalPrice }}</strong></div>
            </div>
        {{/each}}
    </div>
</div>