<section class="foodtruck section" id="id-foodtruck">
    <div class="fttitle">
        <h2>FOOD TRUCK</h2>
        <h3 class="cls-foodtruck-h3">Schedule & Location</h3>
        <h4 class="cls-foodtruck-h4">In order to deliver our palatable and exquisite asian dishes as fresh to you, our food truck comes near you. Please come by it at your convenience and pleasure</h4>
    </div>

    <div class="row ftcontent">
        <div class="col-md-6 col-sm-6 schedule">
<!--        <div class="col span-1-of-2 box">-->
            <ion-icon name="calendar" class="icon-big"></ion-icon>
            <h4>Schedule</h4>
            <ul class="cls-calendar">
                {{#each ftlocations}}
                    <li class="cls-monday cls-calendar-li">{{this.day}}: @<span class="cls-span-calendar cls-span-monday"> '{{this.location}}' </span></li>
                    
                {{/each}}
<!--                <li class="cls-friday cls-calendar-li">Friday: @<span class="cls-span-calendar cls-span-friday"> 'North Ave NW, Atlanta, GA' </span></li>-->
                <li class="cls-weekend cls-calendar-li" id="id-weekend">Saturday & Sunday: <span class="cls-span-calendar cls-span-weekend">Off</span></li>
                <li class="cls-businesshour cls-calendar-bold"><ion-icon name="time" class="cls-time icon-big"></ion-icon>Business Hour: 11am - 3pm, 5pm - 7pm </li>
            </ul>
        </div>
        <div class="col-md-6 col-sm-6 map">
            <ion-icon name="pin" class="icon-big"></ion-icon>
            <h4>Today's Food Truck Location</h4>
            <div id="id-map">
            </div>
        </div>
    </div>
</section>

