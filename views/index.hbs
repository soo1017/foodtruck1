<section class="main-menus section" id="id-menus">
    <div class="row1 menus-title overflow">
        <h2 class="cls-menus-title">MENUS</h2>
    </div>

    <div class="row1">
        <div class="category sushi">
            <h4>Sushi</h4>
        </div>
        {{#each sushis}}
        <div class = "row sushi">
            {{#each this}}
           <div class = "col-sm-6 col-md-4">

              <div class = "caption clearfix">
                 <p class="name">{{this.name}}</p>
                 <p class="description">{{this.description}}</p>

                 <div class="price">
                    <p class="price float-left">{{this.price}}</p> 
                 </div>

              </div>
           </div>
            {{/each}}
        </div>
        {{/each}}

        <div class="category noodle">
            <h4>Noodle</h4>
        </div>
        {{#each noodles}}
        <div class = "row noodle">
           {{#each this}}
           <div class = "col-sm-6 col-md-4">
              <div class = "caption clearfix">
                 <p class="name">{{this.name}}</p>
                 <p class="description">{{this.description}}</p>

                 <div class="price">
                    <p class="price float-left">{{this.price}}</p> 
                 </div>
              </div>
           </div>
            {{/each}}
        </div>
        {{/each}}

        <div class="category drink">
            <h4>Drink</h4>
        </div>
        {{#each drinks}}
        <div class = "row drink">
           {{#each this}}
           <div class = "col-sm-6 col-md-4">
              <div class = "caption clearfix">
                 <p class="name">{{this.name}}</p>
                 <p class="description">{{this.description}}</p>

                 <div class="price">
                    <p class="price float-left">{{this.price}}</p> 
                 </div>
              </div>
           </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
    <div class="onlineorder">
        <a class="btn btn-success" href="/shop">Online Order</a>
    </div>
</section>

<section class="contact section" id="id-contact">
    <div class="row1 contact-title">
        <h3>CONTACT US</h3>
        <h4>For catering, Please contact us here with details with your phone number</h4>
    </div>
    <div class="row1 error-mge" style="display:none;" align="center">
        <p>Please fill all fields up</p>
    </div>
    <div class="row">
        <form method="post" action="/contact" class="contact-form">
            <div class="row contact-input">
                <div class="col-md-4 col-sm-4">
                    <label for="name">Name</label>
                </div>
                <div class="col-md-8 col-sm-8">
                    <input type="text" name="name" id="id-name" placeholder="Your name" required>
                </div>
            </div>
            <div class="row contact-input">
                <div class="col-md-4 col-sm-4">
                    <label for="email">Email</label>
                </div>
                <div class="col-md-8 col-sm-8">
                    <input type="email" name="email" id="id-email" placeholder="Your email" required>
                </div>
            </div>
            <div class="row contact-input">
                <div class="col-md-4 col-sm-4">
                    <label>Drop us a line</label>
                </div>
                <div class="col-md-8 col-sm-8">
                    <textarea name="message" placeholder="Your message" id="id-textinput"></textarea>
                </div>
            </div>
            <div class="row cls-contact-btn-div0">
                <div class="col-md-4 col-sm-4">
                    <label>&nbsp;</label>
                </div>
                <div class="col-md-8 col-sm-8 contact-btn-div1">
                    <input type="submit" value="Contact Us" class="btn btn-primary contact-btn">
                </div>
            </div>
        </form>
    </div>
</section>

